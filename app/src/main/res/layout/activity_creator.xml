<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_nav"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/tanggal1"
        android:layout_width="148dp"
        android:layout_height="39dp"
        android:layout_marginTop="48dp"
        android:clickable="true"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="DD/MM/YYYY"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

    <EditText
        android:id="@+id/tanggal2"
        android:layout_width="148dp"
        android:layout_height="39dp"
        android:layout_marginStart="36dp"
        android:clickable="true"
        android:drawableEnd="@android:drawable/arrow_down_float"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:longClickable="false"
        android:text="DD/MM/YYYY"
        app:layout_constraintStart_toEndOf="@+id/tanggal1"
        app:layout_constraintTop_toTopOf="@+id/tanggal1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Buat Aktifitas"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="223dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Buat aktifitas lebih terorganisir dengan aplikasi Kolaborasi HMSI"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Masukkan nama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="8dp"
        android:text="Nama Rekrutasi"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="8dp"
        android:text="Hari Kerja"
        app:layout_constraintBottom_toTopOf="@+id/aw"
        app:layout_constraintStart_toStartOf="@+id/aw" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Masukkan data"
        app:layout_constraintStart_toStartOf="@+id/aw"
        app:layout_constraintTop_toBottomOf="@+id/aw"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="8dp"
        android:text="Toleransi Keterlambatan"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName4"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName4" />

    <Button
        android:id="@+id/btnkegiatan"
        android:layout_width="267dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:text="Buat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="8dp"
        android:text="Timeline Kegiatan"
        app:layout_constraintBottom_toTopOf="@+id/tanggal1"
        app:layout_constraintStart_toStartOf="@+id/tanggal1" />

    <Spinner
        android:id="@+id/aw"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"

        android:spinnerMode="dropdown"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintStart_toStartOf="@+id/tanggal1"
        app:layout_constraintTop_toBottomOf="@+id/tanggal1" />
<!--    android:entries="@array/spinner_data"-->
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/tanggal2"
        app:layout_constraintStart_toEndOf="@+id/tanggal1"
        app:layout_constraintTop_toTopOf="@+id/tanggal1" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/rs_header1"
        android:orientation="horizontal"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/btnToggleNavdraw"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_hamburger"
            android:tint="@color/colorWhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btnToggleNavdraw"
            android:text="Activity"
            android:textColor="@color/colorWhite"
            android:textSize="29sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <include
        layout="@layout/custom_navdraw"/>
      </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
